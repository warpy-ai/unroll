// ============================================================================
// unroll watch
// ============================================================================

interface WatchOptions {
    release: boolean;
    run: boolean;
}

function parseWatchArgs(args: string[]): WatchOptions {
    let options: WatchOptions = {
        release: false,
        run: false
    };

    let i = 0;
    while (i < args.length) {
        let arg = args[i];

        if (arg == "--release" || arg == "-r") {
            options.release = true;
        } else if (arg == "--run") {
            options.run = true;
        }

        i = i + 1;
    }

    return options;
}

function runWatch(args: string[]): number {
    let options = parseWatchArgs(args);

    console.log("Watching for changes...");
    console.log("Press Ctrl+C to stop");
    console.log("");

    // Initial build
    let buildArgs: string[] = [];
    if (options.release) {
        buildArgs.push("--release");
    }
    runBuild(buildArgs);

    // Watch loop
    // TODO: Implement file watcher
    watchFiles("./src", () => {
        console.log("");
        console.log("Change detected, rebuilding...");
        runBuild(buildArgs);

        if (options.run) {
            // Restart the process
            let manifest = loadManifest("./unroll.toml");
            if (manifest != null) {
                let profile = options.release ? "release" : "dev";
                let binaryPath = "./target/" + profile + "/" + manifest.name;
                executeProcess(binaryPath, []);
            }
        }
    });

    return 0;
}

