function runClean(args: string[]): number {
    console.log("Cleaning build artifacts...");

    // Remove target directory
    let result = removeDirectory("./target");
    if (!result.success) {
        console.error("Error cleaning: " + result.error);
        return 1;
    }

    console.log("Cleaned");
    return 0;
}

